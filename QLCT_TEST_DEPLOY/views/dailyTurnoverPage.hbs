<body>
    <link rel="stylesheet" href="css/importGoodsHistoryStyle.css" />
    <link rel="stylesheet" href="css/dailyTurnoverStyle.css" />
    <div class="pop-up-graph visibility-hidden">
        <div class="graph-container">
            <div class="graph">
                <div class="noti-header ">
                    <i class="fas fa-window-close graph-close"></i>
                </div>
                <div class="graph-content">
                    <canvas id="line-chart"></canvas>

                </div>
            </div>
        </div>
    </div>
    <div class="container ">
        <div class="records-container">
            <h3>
                Doanh thu hôm nay
            </h3>

            <div class="d-flex justify-content-between">
                <div class="input-group receipt-search">
                    <input type="search" placeholder="Tìm kiếm đơn theo mã" aria-describedby="button-addon1"
                        class="rounded rounded-pill form-control border-0 bg-light" id="search-rec-id" value="">
                    <div class="input-group-append">
                        <button id="search-receipt" type="button" class="btn btn-link text-primary"><i
                                class="fa fa-search"></i></button>
                    </div>
                </div>
                <div class="date-and-totalTurnover d-flex justify-content-between">
                    <div>Thời gian cập nhật: {{#customDate total.tg_cap_nhat}} {{/customDate}}</div>
                    <div>Doanh thu: {{ConvertToVND total.doanh_thu}}</div>
                    <div>Lợi nhuận: {{ConvertToVND total.loi_nhuan}}</div>
                </div>

            </div>
            <div class="d-flex justify-content-end">
                <button class="btn btn-primary graph-btn">
                    Biểu đồ
                </button>
            </div>

            <h3>{{message}}</h3>

            <div class="accordion">
                {{#each transactionsList as |parentList|}}
                {{index}}
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingOne">
                        <div class="form-control custom-fc" type="button" value="{{this.id}}">
                            <div class="card-header-custom">
                                <div class="title-custom time-column">{{#customDate
                                    this.thong_tin.ngaynhap}}{{/customDate}}
                                </div>
                                <div class="title-custom receipt-id-column">ID: {{this.id}}</div>
                                <div class="title-custom reciept-status">Trạng thái: {{this.thong_tin.trang_thai}}</div>
                                <div class="title-custom total-column">Tổng tiền: {{ConvertToVND this.tong_tien}}</div>
                            </div>
                        </div>
                    </h2>
                </div>
                {{/each}}
            </div>
        </div>

        <nav class="pagination-div" aria-label="Page navigation example">
            <ul class="pagination">
                {{#times totalPage}}
                <li class="page-item page-number {{#ifCond  ../currentPage  '==' this }}active{{/ifCond}}">
                    <a class="page-link" href="?page={{this}}">{{this}}</a>
                </li>
                {{/times}}
            </ul>
        </nav>

    </div>
    <script src="script/dailyTurnoverScript.js"></script>
    <script src="script/globalScript.js"></script>
    <script>
        new Chart(document.getElementById("line-chart"), {
            type: 'bar',
            data: {
            labels: [{{{hour}}}],
            datasets: [{
            data: [{{numberOfReceipt}}],
            label: "Số đơn hàng",
            fill: false,
            tension: 0.1
        }
                            ]
                            },
            options: {
            title: {
                display: true,
                text: 'Thống kê số đơn hàng'
            }
        }
                        });
    </script>
    </script>
</body>

</html>