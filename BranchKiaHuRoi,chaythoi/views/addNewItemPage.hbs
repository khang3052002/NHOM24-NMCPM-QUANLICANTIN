

<div class="input-group mb-3 input-row" id="row-1">
    <span class="input-group-text">Mặt hàng</span>
    <select class="form-select category-field" value="">
        {{#each goodsList}}
        <option value="{{this.ma_mat_hang}}">{{this.ten_mat_hang}}</option>
        {{/each}}
    </select>
    <span class="input-group-text">Số lượng</span>
    <input type="number" class="form-control amount-field" id="amount-1" value="" required>
    <span class="input-group-text">Giá nhập</span>
    <input type="number" class="form-control price-field" id="price-1" value="" required>
    <span class="input-group-text ">Ngày SX</span>
    <input type="date" class="form-control mf-date" id="date-1" value="" required>
    <i class="fa-solid fa-delete-left" id="delete-btn-1"></i>
</div>